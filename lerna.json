{
  "$schema": "https://json.schemastore.org/lerna.json",
  "workspaces": ["packages/*"],
  "version": "0.0.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": "package.json",
      "registry": "https://registry.npmjs.org",
      "access": "public"
    },
    "version": {
      "ignoreChanges": "package.json"
    }
  },
  "useNx": true
}
