{
  "$schema": "https://json.schemastore.org/lerna.json",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.3.3",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "package.json",
        "yarn.lock",
        "lerna.json"
      ],
      "registry": "https://registry.npmjs.org",
      "access": "public"
    },
    "version": {
      "ignoreChanges": [
        "package.json",
        "yarn.lock",
        "lerna.json"
      ]
    }
  },
  "useNx": true
}
